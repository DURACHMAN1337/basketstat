        <addForeignKeyConstraint baseColumnNames="GAME_ID" baseTableName="BST_BASE_UUID_ENTITY"
                                 constraintName="FK_BST_BASE_UUID_ENTITY_ON_GAME" referencedColumnNames="ID"
                                 referencedTableName="BST_BASE_UUID_ENTITY"/>
    </changeSet>
